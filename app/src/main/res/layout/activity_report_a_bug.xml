<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ReportBug"
android:background="@color/CARD">


    <EditText
        android:id="@+id/addmentorpassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/input_bg"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Body"
        android:minHeight="300dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="#362a60"
        android:textColorHint="#362a60"
        app:layout_constraintEnd_toEndOf="@+id/addmentorusername"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/addmentorusername"
        app:layout_constraintTop_toBottomOf="@+id/addmentorusername" />

    <EditText
        android:id="@+id/addmentorusername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/input_bg"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Subject"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColorHint="#362a60"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:background="@drawable/btn_bg"
        android:backgroundTint="@color/white"
        android:foregroundTint="@color/white"
        android:onClick="Report_Bug_Clicked"
        android:shadowColor="@color/colorWhite"
        android:text="Report Bug"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="@+id/addmentorpassword"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/addmentorpassword"
        app:layout_constraintTop_toBottomOf="@+id/addmentorpassword"
        app:rippleColor="@color/colorWhite"
        app:strokeColor="@color/colorWhite" />

</androidx.constraintlayout.widget.ConstraintLayout>